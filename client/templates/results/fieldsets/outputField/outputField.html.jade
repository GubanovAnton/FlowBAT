          i.fa.fa-calculator
          | Stats
        button.set-property.btn.btn-default(class="{{#if condition output 'is' 'rwcount'}}active{{/if}} {{#if ../isDashboard}}btn-xs{{/if}}", data-property="output", data-value="rwcount", type="button")
          i.fa.fa-sort-numeric-asc
          | Count
