template(name="table")
  table.results-table.table.table-hover
    thead
      tr
        each header
          th(data-field="{{.}}")
            | {{t fieldI18nString}}
            if condition ../sortField "is" .
              if ../sortReverse
                i.fa.fa-caret-down
              else
                i.fa.fa-caret-up
    tbody
      each rows
        tr
          each .
            td
              if condition _id "is" "sTime"
                +time
              else if condition _id "is" "eTime"
                +time
              else
                | {{value}}
