.results
  .query-display
    margin 10px 0
    line-height 35px
    white-space pre-line
  form .form-group:last-child
    margin-bottom 15px
  .options-form
    .controlsForTheHeartOfTheSun + fieldset
      margin-top 10px
    fieldset + .controlsForTheHeartOfTheSun
      margin-top 10px
  .pager
    margin-top 0
  .dropdown-toggle
    cursor pointer

.results.is-simple
  .results-buttons
    .btn-group
      margin-bottom 0

.results-scroller
  overflow-x auto

.results-table
  white-space nowrap
  & > tbody > tr.highlighted > td, & > tbody > tr.highlighted > th
    background-color #f5f5f5
  thead
    th
      cursor pointer

.display-fields-form
  .checkbox
    width 150px
    float left
    margin-top 0 !important

.num-recs
  width auto
  display inline
  padding 8px
  border 1px solid #ddd
  color #636e7b

.extras
  margin-bottom 10px
  text-align center
  a
    margin 0 5px
