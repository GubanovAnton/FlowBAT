.results
  .query-display
    display block
    margin 10px 0
    white-space pre-line
  form .form-group:last-child
    margin-bottom 15px
  .options-form
    & > *
      margin-top 7px
      margin-bottom 7px
    .controlsForTheHeartOfTheSun + fieldset
      margin-top 10px
    fieldset + .controlsForTheHeartOfTheSun
      margin-top 10px
  .pager
    margin-top 0
  .dropdown-toggle
    cursor pointer
  .results-buttons
    margin-top 10px
    margin-bottom 10px
    .btn-group
      margin 0

.results-scroller
  overflow-x auto

.results-table
  white-space nowrap
  & > tbody > tr.highlighted > td, & > tbody > tr.highlighted > th
    background-color #f5f5f5
  thead
    th
      cursor pointer

.display-fields-block
  .checkbox
    width 150px
    height 25px
    float left
    margin-top 0 !important

.num-recs
  width auto
  display inline
  padding 8px
  border 1px solid #ddd
  color #636e7b

.extras
  margin-bottom 10px
  text-align center
  a
    margin 0 5px

input-group.bin-time
  margin-top 10px

input.stats-radio-input
  width 60px

.bin-time
  border-left: 2px solid #563d7c

.rwstats-parameters
  .direction-input-group
    .btn-group
      width 100%
      .btn
        width 50%
  .input-group-addon
    label
      vertical-align top
      margin 0 !important
    &.equisize-input-group-addon
      label
        min-width 80px
        text-align left
