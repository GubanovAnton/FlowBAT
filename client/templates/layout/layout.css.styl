@import 'nib'

html
  position absolute
  width 100%
  height 100%
  margin 0
  padding 0

body
  overflow-y scroll
  width 100%
  height 100%
  margin 0
  padding 0

::selection
  color: #222;
  background: #D6EDFF;

.fb-like
  top: -4px;

.github-button-wrapper
  padding 0 15px
  iframe
    padding 5px

.fb_iframe_widget
  iframe
    width 57px
    height 61px

.header
  font-size 30px

textarea
  box-sizing: border-box
  width 100%
  height 18px
  overflow hidden
  padding 0
  border 0
  appearance none
  padding-end 0px
  padding-start 0px
  outline none
  resize none
  margin 0
  color #393939
  background-color transparent

.start-editing, .add-object
  &:hover
    cursor pointer
    text-decoration underline

.object.is-edited
  background-color #F5F5F5
  border-radius 5px
  .control-label
    text-align left
  .form-control
    font-size 18px

.control-icons
  .fa
    cursor pointer

.duration
  text-align right

.user
  .avatar
    display inline-block
    vertical-align middle
    width 30px
    height 30px
    overflow hidden
    border-radius 5px
    img
      max-width 30px
  .name
    vertical-align middle

/* textarea editor height hacks */
h2
  min-height 41px
h3
  min-height 33px

/* Override Bootstrap */
html
  body
    font-family "News Cycle", "Arial Narrow Bold", sans-serif
  h4, .h4, h5, .h5, h6, .h6
    margin-bottom 5px
