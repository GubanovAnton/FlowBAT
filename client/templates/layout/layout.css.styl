@import 'nib'

body
  overflow-y scroll

::selection
  color: #222;
  background: #D6EDFF;

.fb-like
  top: -4px;

.github-button-wrapper
  padding 0 15px
  iframe
    padding 5px

.fb_iframe_widget
  iframe
    width 57px
    height 61px

.header
  font-size 30px

textarea
  box-sizing: border-box
  width 100%
  height 18px
  overflow hidden
  padding 0
  border 0
  appearance none
  padding-end 0px
  padding-start 0px
  outline none
  resize none
  margin 0
  color #393939
  background-color transparent

.start-editing
  &:hover
    cursor pointer
    text-decoration underline

.row.is-edited
  background-color #F5F5F5
  border-radius 5px
